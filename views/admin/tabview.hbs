    <div id="London" class="tabcontent"> {{!-- Doctors list --}}
      <section>
        <div class="container">
          <div class="row mt-4 float-left">
            <a href="/admin/add-doctors" class="btn btn-success ml-auto ">Add Doctors</a>

          </div>
          <table class="table mt-6">
            <thead>
              <tr>
                <th scope="col">Doctor Name</th>
                <th scope="col">Specialised</th>
                <th scope="col">Speciality</th>
                <th scope="col">Account status</th>
                <th scope="col">Actions</th>
              {{!--   <th>Image</th> --}}
              </tr>
            </thead>
            <tbody>
              {{#each doctors }}

              <tr>
                <th scope="row">1</th>
                <td>{{this.doctorName}}</td>
                <td>{{this.specialised}}</td>
                <td>{{this.speciality}}</td>
                <td>{{this.accountStatus}}</td>
                <td> <img style="width:50px;height :50px" src="/product-images/{{this._id}}.jpg" alt="Loading "> </td>
                <td>
                  <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                  <a href="admin/delete-product/{{this._id}}" class="btn btn-danger"
                    onclick="return confirm('Do you want to delete {{this.doctorName}}?')">Delete</a>
                </td>
              </tr>

              {{/each}}
            </tbody>
          </table>
        </div>
      </section>

    </div>

    <div id="Paris" class="tabcontent">
      <h3>Patients</h3>
      <p>Here is patient list</p>
    </div>

    <div id="Tokyo" class="tabcontent">
      <h3>Appointments </h3>
      <p>The appointments</p>
    </div>

    <script>
      function openCity(evt, cityName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
          tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
          tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(cityName).style.display = "block";
        evt.currentTarget.className += " active";
      }

      // Get the element with id="defaultOpen" and click on it
      document.getElementById("defaultOpen").click();
    </script>
    <style>
      * {
        box-sizing: border-box
      }

      body {
        font-family: "Lato", sans-serif;
      }

      /* Style the tab */
      .tab {
        float: left;
        background-color: #343942;
        width: 30%;
        height: 300px;
        color: #FFFFFF;
      }

      /* Style the buttons inside the tab */
      .tab button {
        display: block;
        background-color: #303641;
        color: white;
        padding: 25px 35px;
        width: 100%;
        border: none;
        outline: none;
        text-align: left;
        cursor: pointer;
        transition: 0.3s;
        font-size: 17px;
      }

      /* Change background color of buttons on hover */
      .tab button:hover {
        background-color: #303641;
      }

      /* Create an active/current "tab button" class */
      .tab button.active {
        background-color: #303641;
      }

      /* Style the tab content */
      .tabcontent {
        float: left;
        padding: 0px 12px;
        border: 1px solid #ccc;
        width: 100%;
        border-left: none;
        height: 100%;
      }
    </style>